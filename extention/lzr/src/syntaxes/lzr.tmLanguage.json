{
  "scopeName": "source.lzr",
  "fileTypes": ["lzr"],
  "patterns": [
    {
      "include": "#html"
    }
  ],
  "repository": {
    "html": {
      "patterns": [
        {
          "include": "text.html.basic"
        },
        {
          "begin": "<style>",
          "end": "</style>",
          "name": "meta.embedded.block.css",
          "patterns": [
            {
              "include": "source.css"
            }
          ]
        },
        {
          "begin": "<go>",
          "end": "</go>",
          "name": "meta.embedded.block.golang",
          "patterns": [
            {
              "include": "source.go"
            }
          ]
        }
      ]
    }
  }
}
